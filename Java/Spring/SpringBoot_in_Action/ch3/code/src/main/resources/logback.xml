<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
        </encoder>
    </appender>

    <logger name = "root" level="INFO" />
    <root level = "INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>